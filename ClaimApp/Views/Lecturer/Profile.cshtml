@model ClaimApp.Models.Lecturer

@{
    ViewData["Title"] = "Lecturer Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you're using a layout if you have one
}

<h2 class="text-center my-4">Edit Profile</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">@Model.FirstName @Model.LastName's Profile</h4>
                </div>

                <div class="card-body">
                    <form asp-action="EditProfile" method="post">
                        <div class="form-group">
                            <label for="FirstName">First Name:</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="LastName">Last Name:</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">Email cannot be changed.</small>
                        </div>

                        <div class="form-group">
                            <label for="Phone">Phone:</label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Department">Department:</label>
                            <input asp-for="Department" class="form-control" placeholder="Enter department" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>

                        <!-- Add more editable fields here if necessary -->

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a href="@Url.Action("Dashboard", "Lecturer")" class="btn btn-secondary ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
