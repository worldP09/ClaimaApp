@{
    ViewData["Title"] = "Lecturer Dashboard";
}


<div class="container mt-5">
    <h2>Lecturer Dashboard</h2>
    <p>Welcome, Lecturer! Here you can manage your monthly claims.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-file-invoice fa-3x mb-3"></i>
                    <h5 class="card-title">Submit a Claim</h5>
                    <p class="card-text">Submit your monthly claims with supporting documents.</p>
                    <a href="/Lecturer/SubmitClaim" class="btn btn-primary">Submit Claim</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x mb-3"></i>
                    <h5 class="card-title">View Claim Status</h5>
                    <p class="card-text">Check the status of your submitted claims.</p>
                    <a href="/Lecturer/ViewClaims" class="btn btn-info">View Claims</a>
                </div>
            </div>
        </div>
    </div>
</div>

