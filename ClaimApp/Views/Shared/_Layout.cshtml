<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClaimApp</title>
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">ClaimApp</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a class="nav-link" href="/Lecturer/Login">Lecturer</a></li>
            <li class="nav-item"><a class="nav-link" href="/Coordinator/Login">Coordinator</a></li>
            <li class="nav-item"><a class="nav-link" href="/Manager/Login">Manager</a></li>
        </ul>
    </nav>

    <div class="container">
        @RenderBody()  <!-- Main content will be rendered here -->
    </div>

    <footer class="text-center mt-5">
        <p>&copy; 2024 ClaimApp. All rights reserved.</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Scripts Section -->
    @RenderSection("Scripts", required: false)  <!-- Render scripts if defined in the view -->
</body>
</html>
